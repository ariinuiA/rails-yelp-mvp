<div class="container">
  <h1>Restaurants</h1>
  <div id="restaurants">
    <% @restaurants.each do |restaurant| %>
      <div class="card mb-2" style="width: 12rem;">
        <%= restaurant.name %>
        <p>
          <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
        </p>
      </div>
    <% end %>
  </div>
</div>
