<div class="container">
  <div class="card">
    <h1><%= @restaurant.name %></h1>
  </div>

  <div class="card">
    <div class="d-flex align-items-center">
      <i class="fa-solid fa-location-dot p-2"></i>
      <%= @restaurant.address %>
    </div>

    <div class="d-flex align-items-center">
      <i class="fa-solid fa-phone p-2"></i>
      <%= @restaurant.phone_number %>
    </div>

    <div class="d-flex align-items-center">
      <i class="fa-solid fa-layer-group p-2"></i>
      <%= @restaurant.category %>
    </div>

    <div class="d-flex align-items-center">
      <div id="reviews">
        <h2>Reviews</h2>
        <% @restaurant.reviews.each do |review| %>
          <p>Content: <%= review.content %></p>
          <p>Rating: <%= review.rating %><i class="fa-solid fa-star"></i></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card mt-2">
    <h2>Leave a review</h2>
    <%= render "/reviews/form_review", review: @review %>
  </div>

  <div class="mb-4">
    <%= link_to restaurants_path, class: "text-decoration-none" do %>
      <i class="fa-solid fa-arrow-left"></i> Go back
    <% end %>
  </div>
  <%# <%= render "form", restaurants: @restaurant %>
</div>
